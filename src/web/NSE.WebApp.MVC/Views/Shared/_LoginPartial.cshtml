@using NSE.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá, @AppUser.GetByEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 10px;">
            <a class="btn btn-link" asp-controller="Auth" asp-action="Register">Crie sua conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-link" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>